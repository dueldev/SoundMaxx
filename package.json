{
  "name": "soundmaxx",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate:sql": "tsx scripts/run-sql-migration.ts",
    "worker:dev": "uvicorn worker.app.main:app --reload --host 0.0.0.0 --port 8000",
    "worker:qa": "python3 -m worker.qa_harness --fixtures worker/fixtures",
    "vercel:preflight": "tsx scripts/vercel-preflight.ts",
    "test:live:prod": "tsx scripts/live-functional-audit.ts --base-url https://soundmaxx.vercel.app",
    "test:seo": "tsx scripts/seo-smoke.ts --base-url https://www.soundmaxx.net --canonical-base-url https://www.soundmaxx.net --expect-indexable true"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tabler/icons-react": "^3.36.1",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "@vercel/blob": "^2.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.34.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.574.0",
    "motion": "^12.34.1",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "postgres": "^3.4.8",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-dropzone": "^15.0.0",
    "react-hook-form": "^7.71.1",
    "tailwind-merge": "^3.4.1",
    "tw-animate-css": "^1.4.0",
    "wavesurfer.js": "^7.12.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
